<section id="videos">
  ::before
  <div class="row">
    {{ page.title }}
    <div class=twelve columns collapsed">
      <div id="videos-wrapper" class="bgrid-quarters s-bgrid-thirds cf">
        {% for item in page.header.videos %}
        <div class="columns videos-item">
          <div class="item-wrap">
            <a href="#modal-{{ loop.index }}" title="">
              {{ page.media[item.img].cropZoom(215, 215).html() }}
              <div class="overlay">
                <div class="videos-item-meta">
                  <h5>{{ item.title }}</h5>
                  <p>{{ item.description }}</p> 
                </dvi>
              </div>
              <div class="item-link-icon"><i class="icon-plus"></i></div>
            </a>
          </div>
        </div>
        {% endfor %}  
      </div>
    </div>
    {% for item in page.header.videos %}
    <div id="modal-{{ loop.index }}" class="popup-modal mfp-hide">
      <img class="scale-with-grid" src="{{ page.media[item.img].url }}" alt=""></img>
      <div class="description-box">
        <h4>{{ item.title }}</h4>
        <p>{{ item.content }}.</p>
      </div>
      <div class="link-box">
        <a class="popup-modal-dismiss">Close</a>
      </div>
    </div>  
    {% endfor %}
  </div>
  ::after
</section>
